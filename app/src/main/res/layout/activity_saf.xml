<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flSAFActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_saf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="edu.puc.iic3380.mg4.activities.SAFActivity">

        <fragment
            android:id="@+id/fASFView"
            android:name="edu.puc.iic3380.mg4.fragments.SAFViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_safview">



        </fragment>

        <fragment
            android:id="@+id/fASFSelecction"
            android:name="edu.puc.iic3380.mg4.fragments.SAFSelectionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            tools:layout="@layout/fragment_safselection" />


    </LinearLayout>
</FrameLayout>